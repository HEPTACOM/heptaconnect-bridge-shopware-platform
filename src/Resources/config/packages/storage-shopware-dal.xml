<?xml version="1.0" ?>
<container
    xmlns="http://symfony.com/schema/dic/services"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd"
>
    <services>
        <service
            class="Heptacom\HeptaConnect\Storage\ShopwareDal\Bridge\StorageFacade"
            id="Heptacom\HeptaConnect\Storage\Base\Bridge\Contract\StorageFacadeInterface"
        >
            <argument id="Doctrine\DBAL\Connection" type="service"/>
        </service>
        <service id="Heptacom\HeptaConnect\Storage\ShopwareDal\DalAccess"/>
        <service
            class="Heptacom\HeptaConnect\Storage\ShopwareDal\MappingPersister\MappingPersister"
            id="Heptacom\HeptaConnect\Storage\Base\MappingPersister\Contract\MappingPersisterContract"
        >
            <argument type="service" id="heptaconnect_mapping.repository"/>
            <argument type="service" id="Doctrine\DBAL\Connection"/>
        </service>
        <service
            class="Heptacom\HeptaConnect\Storage\ShopwareDal\Repository\MappingNodeRepository"
            id="Heptacom\HeptaConnect\Storage\Base\Contract\Repository\MappingNodeRepositoryContract"
        >
            <argument id="Heptacom\HeptaConnect\Storage\ShopwareDal\StorageKeyGenerator" type="service"/>
            <argument id="heptaconnect_mapping_node.repository" type="service"/>
            <argument id="heptaconnect_mapping.repository" type="service"/>
            <argument id="Heptacom\HeptaConnect\Storage\ShopwareDal\ContextFactory" type="service"/>
            <argument id="Heptacom\HeptaConnect\Storage\ShopwareDal\EntityTypeAccessor" type="service"/>
        </service>
        <service id="Heptacom\HeptaConnect\Storage\ShopwareDal\EntityTypeAccessor">
            <argument id="Doctrine\DBAL\Connection" type="service"/>
        </service>
    </services>
</container>
